-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:id => 'movie_title', :class => helper_class('title') }= link_to "Movie Title", :sort => 'title', :id => 'movie_title' 
      %th Rating
      %th{:id => 'release_date', :class => helper_class('release') }= link_to "Release Date", :sort => 'release_date', :id => 'release_date' 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
